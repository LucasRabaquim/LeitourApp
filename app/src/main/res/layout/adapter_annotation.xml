<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/item_annotation_layout"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.7"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/annotation_title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="start|bottom"
                android:paddingLeft="20dp"
                android:textColor="#4D4D4E"
                android:textSize="18sp"
                android:text="A Revolução dos Bichos"/>

            <TextView
                android:id="@+id/annotation_date"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:textColor="#979292"
                android:textSize="12sp"
                android:text="27/11/2023"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.6">

            <ImageButton
                android:id="@+id/publication_options"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@drawable/op_oes" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/annotation_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:paddingTop="5dp"
            android:maxLength="50"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#4D4D4E"
            android:text="Robôs são bem bacanas e gostam de bananas. Robôs são bem bacanas e gostam de bananas. Robôs são bem bacanas e gostam de bananas."/>

    </LinearLayout>

</LinearLayout>