<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_annotation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/annotation_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_semibold"
                        android:gravity="start|bottom"
                        android:paddingStart="20dp"
                        android:text="@string/placeholder"
                        android:textColor="#4D4D4E"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/annotation_date"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:paddingStart="20dp"
                        android:text="@string/placeholder"
                        android:textColor="#979292"
                        android:textSize="12sp" />


                </LinearLayout>


                <ImageButton
                    android:id="@+id/publication_options"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/icon_options" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/annotation_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:maxLength="50"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:text="Robôs são bem bacanas e gostam de bananas. Robôs são bem bacanas e gostam de bananas. Robôs são bem bacanas e gostam de bananas."
                    android:textColor="#4D4D4E" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>