<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlivro"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_return"
            style="@style/CircularButton"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/AzulDefault"
            android:textSize="18dp"
            android:fontFamily="@font/outfit_semibold"
            android:text="Detalhes do livro" />

        <ImageButton
            android:id="@+id/saved_options"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:src="@drawable/icon_options"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_book_cover"
                    android:layout_width="207dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/border"
                    android:padding="5dp"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="321dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|fill_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/stars"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="4.9"
                        android:textColor="@color/AzulDefault"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_round_star" />

                    <TextView
                        android:id="@+id/avalicao"
                        style="@style/TextTitle"
                        android:fontFamily="@font/outfit_regular"
                        android:text="Avalições"
                        android:textColor="@color/Cinzaclaro"
                        android:textSize="12dp" />

                    <Button
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="4.9"
                        android:textColor="@color/AzulDefault"
                        android:textSize="14sp"
                        app:icon="@drawable/fluent_note_16_filled" />

                    <TextView
                        android:id="@+id/txt_book_pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="@string/book_pages"
                        android:textColor="@color/Cinzaclaro"
                        android:textSize="12dp" />

                    <Button
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="4.9"
                        android:textColor="@color/AzulDefault"
                        android:textSize="14sp"
                        app:icon="@drawable/vector" />

                    <TextView
                        android:id="@+id/leitores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="Leitores"
                        android:textColor="@color/Cinzaclaro"
                        android:textSize="12dp" />

                    <Button
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="4.9"
                        android:textColor="@color/AzulDefault"
                        android:textSize="14sp"
                        app:icon="@drawable/mingcute_world_2_fill" />

                    <TextView
                        android:id="@+id/txt_book_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="@string/book_language"
                        android:textColor="@color/Cinzaclaro"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/FlexRow"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="50dp">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/j__leu_esse_livro_" />

                <Button
                    android:id="@+id/icon_save"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/botaosave" />

                <Button
                    android:id="@+id/icon_annotation"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/anota__o"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_book_author"
                style="@style/TextTitle"
                android:fontFamily="@font/outfit_regular"
                android:textSize="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/AzulDefault"
                android:text="@string/book_author" />

            <TextView
                android:id="@+id/txt_book_title"
                style="@style/TextTitle"
                android:textColor="@color/Purple"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"

                android:fontFamily="@font/outfit_semibold"
                android:text="@string/book_title" />

            <TextView
                android:id="@+id/txt_book_description"
                style="@style/TextTitle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/outfit_regular"
                android:textSize="15dp"
                android:textColor="@color/Black_Cinza"
                android:text="@string/book_description" />

            <TextView
                android:id="@+id/txt_book_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black_Cinza"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="@string/book_category" />
<!--
            <TextView
                android:id="@+id/txt_book_isbn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_isbn10" />

            <TextView
                android:id="@+id/txt_book_isbn13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_isbn13" />

                !-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_annotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>