<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/item_publication_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userAnonimoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.polarys.appleitour.view.customview.ImageCircleCustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/placeholder">

                </ImageView>

                <TextView
                    android:id="@+id/txt_publication_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_semibold"
                    android:padding="10dp"
                    android:text="Nome"
                    android:textColor="#4D4D4E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_publication_useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="Nick"
                    android:layout_marginLeft="30dp"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_publication_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="Date"
                    android:layout_marginLeft="20dp"
                    android:textColor="#a5a5a5"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/publication_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/op_oes"
            android:layout_marginRight="30dp"
            android:background="null"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_publication_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Comentar"
        android:textColor="#7b7373"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/backLineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.179"
            android:drawableTint="@color/AzulDefault"
            android:id="@+id/publication_comments_number"
            android:textColor="#A6A6A6"
            android:textSize="10sp"
            app:icon="@drawable/chat" />

        <Button
            android:id="@+id/publication_btn_share"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.500"
            android:textColor="#a5a5a5"
            android:drawableTint="@color/AzulDefault"
            android:textSize="10sp"
            app:icon="@drawable/rt" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publication_btn_like"
            android:text="1.179"
            android:drawableTint="@color/AzulDefault"
            android:textColor="#A6A6A6"
            android:textSize="10sp"
            app:icon="@drawable/coracao" />


    </LinearLayout>
</LinearLayout>
