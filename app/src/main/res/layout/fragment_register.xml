<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="1"
        app:srcCompat="@drawable/top_line_vector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login_gradient"
        android:orientation="vertical"
        tools:context=".view.fragment.LoginFragment"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/white"
            android:text="Nome de Usuário" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/AzulDefault"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/iconuser">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_username"
                style="@style/SignFieldOutline"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/white"
            android:text="Email" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/AzulDefault">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email"
                style="@style/SignFieldOutline"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/outfit_bold"
            android:text="Senha"
            android:textColor="@color/white" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/AzulDefault"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_password"
                style="@style/SignFieldOutline"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/outfit_bold"
            android:text="Comparar Senha"
            android:textColor="@color/white" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/AzulDefault"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_compare_password"
                style="@style/SignFieldOutline"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <CheckBox
            android:id="@+id/cbKeepLogged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:fontFamily="@font/outfit_bold"
            android:button="@drawable/img_checkbox"
            android:text="Lembrar-se"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:buttonIconTint="#145CEC" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginBottom="26dp"
            android:text="Já possui uma conta? Entrar"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/outfit_bold"
            android:layout_gravity="center"
            android:text="Registrar"
            android:textColor="#145CEC"
            android:textSize="16dp"
            app:cornerRadius="20dp" />



        
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="429dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleX="2"
        android:scaleY="1"
        app:srcCompat="@drawable/bottom_line_vector" />
</androidx.constraintlayout.widget.ConstraintLayout>

