<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_gradient"
    tools:context=".view.RegisterActivity">


    <EditText
        android:id="@+id/etFullName"
        android:layout_width="289dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/outfit_bold"
        android:hint="Nome"
        android:inputType="text"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etFullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/outfit_bold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etFullName" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/outfit_bold"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etRepeatPassword"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/outfit_bold"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <CheckBox
        android:id="@+id/cbKeepLogged"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRepeatPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:text="Eu aceito os termos de uso"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/outfit_bold"
        android:text="Register"
        android:textColor="@color/AzulDefault"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnToLogin"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="295dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Nome"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="294dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="293dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Senha"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="235dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Confirmar senha"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/etFullName"
        android:layout_alignTop="@+id/etFullName"
        android:layout_alignEnd="@+id/etFullName"
        android:layout_alignBottom="@+id/etFullName"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ant_design_user_outlined" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etEmail"
        android:layout_alignTop="@+id/etEmail"
        android:layout_alignEnd="@+id/etEmail"
        android:layout_alignBottom="@+id/etEmail"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/eva_email_outline" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/uil_padlock" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/vector" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="297dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/viewopen" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbKeepLogged"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="114dp"
        android:fontFamily="@font/outfit_bold"
        android:text="JÃ¡ possui uma conta? Entrar"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="449dp"
        android:src="@drawable/uil_padlock" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="408dp"
